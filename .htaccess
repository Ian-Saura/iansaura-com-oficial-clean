# Ian Saura Data Engineering Hub - .htaccess
# React Router + PHP API Support
# IMPORTANT: Static files MUST be served directly, never through index.html

# Force correct MIME types for static assets - CRITICAL for Cloudflare
<IfModule mod_mime.c>
    AddType application/javascript .js .mjs
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType application/json .json
    AddType text/html .html
    AddType font/woff2 .woff2
    AddType font/woff .woff
</IfModule>

# Prevent Cloudflare from caching error responses as valid files
<IfModule mod_headers.c>
    # For static assets: cache for 1 year, immutable
    <FilesMatch "\.(js|css|woff2|woff|ttf|eot|svg|png|jpg|jpeg|gif|ico|webp)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header set X-Content-Type-Options "nosniff"
    </FilesMatch>
    
    # For HTML: no cache (always get fresh)
    <FilesMatch "\.html$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# Enable rewrite engine
Options -MultiViews -Indexes
RewriteEngine On

# ============================================
# STATIC FILES - SERVE DIRECTLY (HIGHEST PRIORITY)
# These rules MUST come first to prevent any rewrite
# ============================================

# Serve static directory files directly - NO REWRITE
RewriteCond %{REQUEST_URI} ^/static/
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# If static file doesn't exist, return 404 (NOT index.html)
RewriteCond %{REQUEST_URI} ^/static/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ - [R=404,L]

# Serve other existing files directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ============================================
# API ROUTES
# ============================================

# Dataset API routes - rewrite /api/datasets/{type} to datasets.php
RewriteRule ^api/datasets/(.+)$ api/datasets.php [L,QSA]

# Other API routes
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^api/(.*)$ api/$1 [L,QSA]

# ============================================
# REACT ROUTER - CATCH ALL (LOWEST PRIORITY)
# Only for routes that are NOT files and NOT api
# ============================================

# Bypass rewrite for essential static files
RewriteRule ^favicon\.ico$ - [L,NC]
RewriteRule ^manifest\.json$ - [L,NC]
RewriteRule ^asset-manifest\.json$ - [L,NC]
RewriteRule ^robots\.txt$ - [L,NC]
RewriteRule ^sitemap\.xml$ - [L,NC]
RewriteRule ^sw\.js$ - [L,NC]

# Handle React Router - all other routes go to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/static/
RewriteRule ^ index.html [QSA,L]

# Enhanced Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

# Content Security Policy - Allow YouTube, SQL.js, Pyodide, Google Sign-In, and Meta Pixel
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://apis.google.com https://accounts.google.com https://www.gstatic.com https://www.youtube.com https://sql.js.org https://cdn.jsdelivr.net https://static.cloudflareinsights.com https://connect.facebook.net blob:; worker-src 'self' blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://accounts.google.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: i.ytimg.com img.youtube.com *.googleusercontent.com https://www.facebook.com; connect-src 'self' https://iansaura.com https://accounts.google.com https://oauth2.googleapis.com https://www.googleapis.com https://sql.js.org https://cdn.jsdelivr.net https://www.facebook.com; frame-src https://accounts.google.com https://www.youtube.com https://www.youtube-nocookie.com https://www.facebook.com; object-src 'none'; base-uri 'self'"

# HSTS for HTTPS - ENABLED for production security
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Protect sensitive files
<Files ".env*">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

<Files "*.sql">
    Order allow,deny
    Deny from all
</Files>

<Files "*.json">
    <FilesMatch "^(client_secret|google-service-account)">
        Order allow,deny
        Deny from all
    </FilesMatch>
</Files>

# Prevent access to backup files
<FilesMatch "\.(bak|backup|old|tmp|swp|swo)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent access to configuration files
<FilesMatch "^(secure-config|config|subscription-config|\\.db-credentials).*\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Also protect any file starting with a dot
<FilesMatch "^\\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to directories
Options -Indexes

# Prevent access to git files
<FilesMatch "^\.git">
    Order allow,deny
    Deny from all
</FilesMatch>