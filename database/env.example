# Ian Saura Data Engineering Hub - Environment Variables
# Copy this file to .env and update with your actual values

# ============================================
# DATABASE CONFIGURATION (DonWeb MySQL)
# ============================================
DB_HOST=your-donweb-mysql-host.com
DB_PORT=3306
DB_USER=your-database-username
DB_PASSWORD=your-secure-database-password
DB_NAME=ian_saura_hub
DB_SSL=true

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
PORT=5000
APP_URL=https://yourdomain.com
JWT_SECRET=your-super-secure-jwt-secret-key-here
BCRYPT_ROUNDS=12

# ============================================
# STRIPE CONFIGURATION
# ============================================
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRICE_ID=price_your_stripe_price_id_for_10_monthly_subscription

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=info@iansaura.com
EMAIL_PASSWORD=your-email-app-password
EMAIL_FROM=Ian Saura <info@iansaura.com>

# ============================================
# CLOUDINARY (for file uploads)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================
# ANALYTICS & MONITORING
# ============================================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# ============================================
# SECURITY
# ============================================
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ============================================
# REDIS (for sessions and caching)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Uncomment for local development
# DB_HOST=localhost
# DB_USER=root
# DB_PASSWORD=
# DB_SSL=false
# NODE_ENV=development
# APP_URL=http://localhost:3000 