# Ian Saura Data Engineering Hub - .htaccess
# React Router + PHP API Support

Options -MultiViews -Indexes
RewriteEngine On

# Force correct MIME types for static assets
AddType text/css .css
AddType application/javascript .js
AddType image/svg+xml .svg

# IMPORTANT: First, check if the file exists - if it does, serve it directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# IMPORTANT: Check if directory exists
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# API routes - direct to PHP files
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^api/datasets/(.+)$ api/datasets.php [L,QSA]
RewriteRule ^api/(.*)$ api/$1 [L,QSA]

# Everything else goes to index.html (React Router)
RewriteRule ^ index.html [QSA,L]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript text/javascript
    AddOutputFilterByType DEFLATE application/json application/ld+json
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE font/woff font/woff2 application/font-woff2
</IfModule>

# Cache static assets (hashed filenames = safe to cache forever)
<IfModule mod_expires.c>
    ExpiresActive on
    # Hashed bundles (JS/CSS) - cache forever
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    # Images - cache for 1 year
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    # HTML - short cache to pick up new deploys quickly
    ExpiresByType text/html "access plus 5 minutes"
    # JSON/XML
    ExpiresByType application/json "access plus 1 hour"
    ExpiresByType text/xml "access plus 1 hour"
</IfModule>

# Cache-Control headers for fine-grained control
<IfModule mod_headers.c>
    # Hashed static assets - immutable
    <FilesMatch "\.(js|css)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    # Images
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|ico)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    # HTML - must revalidate
    <FilesMatch "\.html$">
        Header set Cache-Control "public, max-age=300, must-revalidate"
    </FilesMatch>
</IfModule>

# Protect sensitive files
<FilesMatch "\.(env|log|sql|bak|backup|old|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "^(secure-config|config|subscription-config|\.db-credentials).*\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block migration, setup, and fix scripts
<FilesMatch "^(fix-|setup-|run-|migration|install).*\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block debug/info PHP files
<FilesMatch "^(phpinfo|info|test|debug|adminer|phpmyadmin)\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block sensitive JSON files
<FilesMatch "^(credentials|secrets|client_secret).*\.json$">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>