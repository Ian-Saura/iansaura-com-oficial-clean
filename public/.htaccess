# Ian Saura Data Engineering Hub - .htaccess
# React Router + PHP API Support

Options -MultiViews -Indexes
RewriteEngine On

# Force correct MIME types for static assets
AddType text/css .css
AddType application/javascript .js
AddType image/svg+xml .svg

# IMPORTANT: First, check if the file exists - if it does, serve it directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# IMPORTANT: Check if directory exists
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# API routes - direct to PHP files
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^api/datasets/(.+)$ api/datasets.php [L,QSA]
RewriteRule ^api/(.*)$ api/$1 [L,QSA]

# Everything else goes to index.html (React Router)
RewriteRule ^ index.html [QSA,L]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Protect sensitive files
<FilesMatch "\.(env|log|sql|bak|backup|old|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "^(secure-config|config|subscription-config|\.db-credentials).*\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block migration, setup, and fix scripts
<FilesMatch "^(fix-|setup-|run-|migration|install).*\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block debug/info PHP files
<FilesMatch "^(phpinfo|info|test|debug|adminer|phpmyadmin)\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block sensitive JSON files
<FilesMatch "^(credentials|secrets|client_secret).*\.json$">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>