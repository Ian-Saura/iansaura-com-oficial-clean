STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ADMIN_EMAIL=iansauradata@gmail.com

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================
# ANALYTICS
# ============================================
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# ============================================
# SECURITY & RATE LIMITING
# ============================================
# Requests per hour for contact form
CONTACT_RATE_LIMIT=5

# Login attempts per 15 minutes
LOGIN_RATE_LIMIT=5

# CORS allowed origins (comma separated)
ALLOWED_ORIGINS=https://www.iansaura.com,https://iansaura.com

# ============================================
# FEATURE FLAGS
# ============================================
REACT_APP_ENABLE_DEMO_MODE=false
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true

# ============================================
# API ENDPOINTS
# ============================================
REACT_APP_CONTACT_API=/api/contact
REACT_APP_AUTH_API=/api/auth
REACT_APP_SUBSCRIPTION_API=/api/subscription

# ============================================
# SECURITY HEADERS
# ============================================
REACT_APP_CSRF_TOKEN_HEADER=X-CSRF-Token

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=error
LOG_RETENTION_DAYS=90

# ============================================
# SECURITY NOTES & BEST PRACTICES
# ============================================
# 1. Never commit this file to version control
# 2. Use strong, unique passwords (minimum 16 characters)
# 3. Regularly rotate credentials (every 90 days)
# 4. Use environment variables on your server when possible
# 5. Enable 2FA on all accounts
# 6. Monitor logs for suspicious activity
# 7. Keep all software updated
# 8. Use HTTPS everywhere
# 9. Implement proper backup strategies
# 10. Regular security audits 