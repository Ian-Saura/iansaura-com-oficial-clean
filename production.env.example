# ============================================
# SECURITY CONFIGURATION
# ============================================
# Generate a strong random password for admin access (min 16 chars)
ADMIN_PASSWORD=your_very_secure_admin_password_here

# Generate a strong secret key (use: openssl rand -hex 32)
APP_SECRET_KEY=your_64_character_hex_secret_key_here

# ============================================
# STRIPE CONFIGURATION (PRODUCTION)
# ============================================
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_key
REACT_APP_STRIPE_PRICE_ID=price_your_live_price_id
