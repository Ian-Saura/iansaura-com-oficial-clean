REACT_APP_API_URL=https://yourdomain.com/api
REACT_APP_SITE_URL=https://yourdomain.com

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_NAME=c2621673_ian
DB_USER=c2621673_ian
DB_PASSWORD=your_secure_database_password_here
